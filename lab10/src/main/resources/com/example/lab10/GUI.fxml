               </children>
            </AnchorPane>
            <ScrollPane fx:id="scrollCanvasContainer" fitToHeight="true" fitToWidth="true" pannable="true" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
