                                <MenuItem mnemonicParsing="false" text="Exit" onAction="#safeExitGame" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Options">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Settings" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
            </children>
        </VBox>
    </top>
   <center>
      <AnchorPane fx:id="centerAnchorContainer" prefHeight="503.0" prefWidth="502.0" BorderPane.alignment="CENTER">
